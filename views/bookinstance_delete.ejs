<% layout('layout') -%>
<h1><%=title%>: <%=bookinstance._id%></h1>

<p><%=bookinstance.book.title%></p>
<p><%=bookinstance.imprint%></p>

<% if (bookinstance.status !== "Available") {%>
    <p><strong>You should mark as 'Available' before attempting to delete this book instance.</strong></p>
    <div style="margin-left:20px;margin-top:20px">
        <dl><a href="<%=bookinstance.url%>">Back</a></dl>
    </div>
<%} else {%>
    <p>Do you really want to delete this BookInstance?</p>
    <form action="" method="post">
        <div class="form-group mb-2">
            <input type="hidden" name="bookinstanceid" id="bookinstanceid" class="form-control" required="true" value="<%=bookinstance._id%>">
            <button type="submit" class="btn btn-primary">Delete</button>
        </div>
    </form>
<%}%>