<% layout('layout') -%>
<h1><%=title%></h1>

<form action="" method="post">
    <div class="form-group mb-1">
        <label for="first_name">First Name:
        <input type="text" name="first_name" id="first_name" class="form-control mt-1 mb-2" placeholder="First name"  value="<% (author === undefined) ? '' : author.first_name %>">
        <label for="family_name">Family Name:
        <input type="text" name="family_name" id="family_name" class="form-control my-1" placeholder="Family name"  value="<% (author === undefined) ? '' : author.family_name %>">
    </div>
    <div class="form-group">
        <label for="date_of_birth">Date of birth:
        <input type="date" name="date_of_birth" id="date_of_birth" class="form-control my-1" value="<% (author === undefined) ? '' : author.date_of_birth %>">
        <label for="date_of_birth">Date of date_of_death    :
        <input type="date" name="date_of_death" id="date_of_death" class="form-control mt-1 mb-2" value="<% (author === undefined) ? '' : author.date_of_death %>">
    
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
</form>

<% if (errors) {%>
    <ul>
        <%errors.forEach(error => {%>
            <li><%=error.msg%></li>    
        <%})%>
    </ul>
<%}%>